{
    "$schema": "https://json.schemastore.org/chrome-manifest",
    "__chrome__$schema": null,
    "__firefox__$schema": null,

    "manifest_version": 3,
    "author": "MHCT",
    "name": "MHCT MouseHunt Helper",
    "short_name": "MHCT Helper",
    "description": "Provides useful links and tracks MH game data for tools like rate calculators. Made by Tsitu, Tehhowch, Aardwolf, Jack and others.",
    "version": "0.0.0",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },

    "permissions": [
        "notifications",
        "tabs",
        "storage"
    ],

    "content_scripts": [{
        "all_frames" : true,
        "matches": ["*://www.mousehuntgame.com/*"],
        "css": ["css/user-notify.css"],
        "js": ["scripts/content.js"]
    }],

    "host_permissions": [
        "https://www.mousehuntgame.com/*"
    ],

    "web_accessible_resources": [
        {
            "resources": [
                "scripts/main.js",
                "third_party/tsitu/*",
                "third_party/potatosalad/*",
                "images/*",
                "sounds/bell.mp3"
            ],
            "matches": ["https://www.mousehuntgame.com/*"]
        }
    ],

    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },

    "__firefox__background": {
        "scripts": ["scripts/background.js"]
    },

    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },

    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        },
        "default_popup": "popup.html"
    },

    "__firefox__browser_specific_settings": {
        "gecko": {
            "id": "{801e5516-3311-4ee7-8185-7da12ffab807}"
        }
    }
}
