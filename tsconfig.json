{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist/scripts",
    "strict": true,
    "sourceMap": true,
    "lib": [
      "DOM",
      "DOM.Iterable"
    ],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "paths": {
      "@scripts/*":["./src/scripts/*"],
      "@tests/*": ["./tests/*"]
    },
    "types": [
      "chrome",
      "jquery",
      // TODO: Migrate tests away from globals
      "vitest/globals"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
